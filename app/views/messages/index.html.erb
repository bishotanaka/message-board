<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<div class="form">
		<%= form_for(@message) do |f| %>
	<div class="form-group">
  		<label for="inputName" class="col-md-1 control-label">名前:</label>
			<%= f.text_field :name %>
	</div>
	
	<div class="form-group">
  	<label for="inputContent" class="col-md-1 control-label">内容:</label>
  	<%= text_area :page, :comtent %>
  </div>
  <div class="form-group">
  	<div class="col-md-offset-1 control-label">
  		<%= f.submit class: "btn btn-sm btn-primary" %>
  	</div>
		<% end %>
	</div>
</div>
</div>